<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.fragment.profile.ProfileFragment">

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/image_profile"
    android:layout_width="180dp"
    android:layout_height="180dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:contentDescription="@string/profile_pictrue"
    android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/Full_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_profile"
        android:text="@string/full_name_here"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Full_Name"
        android:text="@string/example1234_email_com"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="6dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/group_konten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:id="@+id/group_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:contentDescription="@string/button_help"
                android:layout_marginStart="24dp"
                android:id="@+id/ic_help"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_help"/>

            <TextView
                android:id="@+id/tv_bantuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bantuan"
                android:layout_marginStart="14dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <ImageView
                android:layout_marginStart="210dp"
                android:id="@+id/ic_arrow_bantuan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_right"/>

        </LinearLayout>

        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="16dp"/>

        <LinearLayout
            android:id="@+id/group_qna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:contentDescription="@string/button_help"
                android:layout_marginStart="24dp"
                android:id="@+id/ic_qna"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_qna"/>

            <TextView
                android:id="@+id/tv_qna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tanya_jawab"
                android:layout_marginStart="14dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <ImageView
                android:layout_marginStart="170dp"
                android:id="@+id/ic_arrow_qna"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_right"/>

        </LinearLayout>

        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="16dp"/>

        <LinearLayout
            android:id="@+id/group_aboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:contentDescription="@string/button_help"
                android:layout_marginStart="24dp"
                android:id="@+id/ic_aboutUs"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_about_us"/>

            <TextView
                android:id="@+id/tv_aboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_us"
                android:layout_marginStart="14dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <ImageView
                android:layout_marginStart="125dp"
                android:id="@+id/ic_arrow_aboutUs"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_right"/>

        </LinearLayout>

        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="16dp"/>

        <LinearLayout
            android:id="@+id/group_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:contentDescription="@string/button_help"
                android:layout_marginStart="24dp"
                android:id="@+id/ic_report"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_error_24"/>

            <TextView
                android:id="@+id/tv_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_us"
                android:layout_marginStart="14dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <ImageView
                android:layout_marginStart="125dp"
                android:id="@+id/ic_arrow_report"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_right"/>

        </LinearLayout>

        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="16dp"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="@string/log_out"
            android:textSize="18sp"
            android:background="@drawable/roundedbutton" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>